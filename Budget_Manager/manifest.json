{
    "manifest_version" : 2,
    "name" : "Budget Manager",
    "description" : "Keeps track of your Spending.",
    "version" : "1.0",
    "icons":{
        "16": "image/icon16.png",
        "48": "image/icon48.png",
        "128": "image/icon128.png"
    },
    "browser_action" :{
        "default_icon" : "image/icon32.png",
        "default_popup" : "popup.html"
    },
    
    "permissions" : [
        "storage",
        "notifications",
        "contextMenus"
    ],

    "options_page": "options.html",
    
    "background" : {
        "scripts" : ["eventPage.js"],
        "persistent" : false
    }

}