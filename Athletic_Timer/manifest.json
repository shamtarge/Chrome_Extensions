{
    "manifest_version" : 2,
    "name" : "Athletic Timer",
    "version" : "1.0",
    "description" : "A timer which has two modes, 'Standard mode' and an 'Athletic mode'.",
    "icons" : {
        "16" : "image/icon16.png",
        "48" : "image/icon48.png",
        "128" : "image/icon128.png"
    },

    "browser_action" : {
        "default_icon" : "image/icon32.png"       
    },

    "permissions" : [
        "notifications",
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
    
}